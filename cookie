function rem(){
	var age = document.getElementById("age_id").value;
	var encod_age = Base64.encode(age);
	set_cookie("age", encod_age, 7);
	var colourscheme = get_cookie("age");
	alert(colourscheme);
}


// Onload it is coming..
	var encod_age = get_cookie("age");
	var decoded_age = Base64.decode(encod_age);alert(decoded_age);
	document.getElementById("age_id").value = decoded_age;
